<div class="row">
  <div class="col-lg-3">
    <%=h render 'partials/userInfo' %>
  </div>
  <div class="col-lg-9">
    <h3>Followed by Users:</h3>
      <% for inverse_friendship in @inverse_friendships %>
        <div class="col-xs-4">
          <div class="panel panel-success">
            <div class="panel-heading">
              <%=h inverse_friendship.user.email %>
            </div>
            <div class="panel-body">
                <%=h inverse_friendship.user.first_name %> <%=h inverse_friendship.user.last_name %>
                    <%if !inverse_friendship.approved %>
                        <%= link_to "Approve Follower", :controller => :friendships, :action => :approve, :friend_id => inverse_friendship.id %>
                     <% else %>
                        <%= link_to "Remove Follower", :controller => :friendships, :action => :disapprove, :friend_id => inverse_friendship.id %>
                     <% end %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>

