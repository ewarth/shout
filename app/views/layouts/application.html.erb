<!DOCTYPE html>
<html>
<head>
  <title>Shout</title>
  <%=h stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%=h javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
  <%=h csrf_meta_tags %>
  <%=h render 'layouts/user_widget' %>
</head>
<body>

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 5px;">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="../friendships/show" style="padding: 0px;"><img src="/shout.png" alt="Shout" style="height: 50px;"/></a>
    </div>
    <!-- /.navbar-header -->

    <ul class="nav navbar-top-links navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <li>
            <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user fa-fw"></i>User Profile
            <%end%>
          <li class="divider"></li>
          <li>
            <%= link_to destroy_user_session_path, :method => :delete do %>
                <i class="fa fa-sign-out fa-fw"></i>Logout
            <%end%>
          </li>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->
    <div id="side-menu"></div>
  </nav>

  <div class="row"></div>
  <%= render "partials/flash_messages", flash: flash %>

  <%=yield %>


</body>
</html>


