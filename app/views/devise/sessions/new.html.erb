<div class="col-sm-6 col-md-4 col-md-offset-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Welcome to Shout!!</h3>
    </div>
    <div class="panel-body">
      <p>Start shouting now.</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, :placeholder => "Email", :class => "form-control", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <%= link_to "Forgot your password?", new_password_path(:user), :class => "pull-right" %>
          </div>

          <div class="form-group">
            <%= f.submit 'Sign in', :class => "btn btn-lg btn-success btn-block" %>
          </div>
      <% end %>

      </div>
    </div>
  </div>

