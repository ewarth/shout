<div class="col-sm-6 col-md-4 col-md-offset-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Change your password</h3>
    </div>
    <div class="panel-body">
      <p>Start shouting now.</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", :placeholder => "New password", :class => "form-control" %></div>

          <div>
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm mew password", :class => "form-control" %></div>

          <div><%= f.submit "Change my password", :class => "btn btn-lg btn-success btn-block" %></div>
      <% end %>
    </div>
  </div>
</div>
