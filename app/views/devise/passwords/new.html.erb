<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%=h devise_error_messages! %>

  <div><%=h f.label :email %><br />
  <%=h f.email_field :email, autofocus: true %></div>

  <div><%=h f.submit "Send me reset password instructions" %></div>
<% end %>

<%=h render "devise/shared/links" %>
