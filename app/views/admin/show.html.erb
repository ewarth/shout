<div class="row">

  <div class="col-lg-9">
    <h3>Admins:</h3>
    <div id="admins">
      <ul>
        <% for admin in @admins%>
            <li>
              <strong><%=h admin.first_name%> <%=h admin.last_name%></strong>
              <%= link_to "Demote", :controller => :admin, :action => :demote , :admin => admin %> |
              <% if admin.locked %>admin
                  <%= link_to raw("<i class=\"fa fa-unlock\"></i>Unlock"), :controller => :admin, :action => :unlock , :user => admin %>
              <% else %>
                  <%= link_to raw("<i class=\"fa fa-lock\"></i>Lock"), :controller => :admin, :action => :lock , :user => admin %>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
    <h3>Users:</h3>
    <div id="users">
      <ul>
        <% for user in @users%>
            <li>
              <strong><%=h user.first_name%> <%=h user.last_name%></strong>
              <%= link_to "Promote", :controller => :admin, :action => :promote , :user => user %> |
              <% if user.locked %>
                  <%= link_to raw("<i class=\"fa fa-unlock\"></i>Unlock"), :controller => :admin, :action => :unlock , :user => user %>
              <% else %>
                  <%= link_to raw("<i class=\"fa fa-lock\"></i>Lock"), :controller => :admin, :action => :lock , :user => user %>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

