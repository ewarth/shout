<div class="col-sm-6 col-md-4 col-md-offset-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Sign up for Shout!!</h3>
    </div>
    <div class="panel-body">

      <%= form_for :user, :url => { :action => "create" }, :html => {method: :post} do |f| %>


          <div class="form-group">
            <%=h f.text_field :first_name, :placeholder => "First Name", :class => "form-control", autofocus: true %>
          </div>
          <div class="form-group">
            <%=h f.text_field :last_name, :placeholder => "Last Name", :class =>"form-control" %>
          </div>
          <div class="form-group">
            <%=h f.email_field :email, :placeholder => "Email", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%=h f.password_field :password, :placeholder => "Password", :class => "form-control"  %>
          </div>
          <div class="form-group">
            <%=h f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control"  %>
          </div>
          <div class="form-group">
            <%=h f.submit 'Sign up', :class => "btn btn-lg btn-success btn-block" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
