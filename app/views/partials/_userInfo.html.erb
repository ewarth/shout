<div class="panel panel-primary">
  <div class="panel-heading">
    <%=h  @user.first_name %>
  </div>
  <div class="panel-footer">
    <div class="col-lg-6"><%= link_to :controller => :friendships, :action => :followers do %>Following:<%=h @friendships.length%><%end%><br /></div>
    <div class="col-lg-6"><%= link_to :controller => :friendships, :action => :followed_by do %>Followed By:<%= @inverse_friendships.length%><%end%><br /></div>
    <div class="row"></div>
    <div class="col-lg-6"><%= link_to :controller => :posts, :action => :show do%>Posts: <%=h @shouts.length %><%end%></div>
    <div class="col-lg-6"><%= link_to "Find Friends", :controller => :friendships, :action => :index %></div>
    <div class="clearfix"></div>
  </div>
</div>

